@inherits CompBase

@if (Visible)
{
    <div class="@GetCssClass() @Class"
         id="@GetId()"
         role="alert"
         @attributes="@Attributes"
         @ref="@ElementReference">

        @if (Template is not null)
        {
            @Template
        }
        else
        {
            @if (!string.IsNullOrEmpty(Icon))
            {
                <i class="@Icon me-2"></i>
            }

            @Message
        }
        @if (Closable)
        {
            <button type="button"
                    class="btn-close @(AlertStyle is AlertStyle.Solid ? "btn-close-white" : "")"
                    data-bs-dismiss="alert"
                    aria-label="Close"
                    @onclick="@OnClose">
            </button>
        }
    </div>
}