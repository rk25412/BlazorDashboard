@inherits CompBase

@if (Visible)
{
     <div class="@GetCssClasses() @Class"
          id="@GetId()"
          role="alert"
          @attributes="@Attributes"
          @ref="@ElementReference">
          @if (ChildContent is not null)
          {
               @ChildContent
          }
          else
          {
               @Text
          }
     </div>
}
