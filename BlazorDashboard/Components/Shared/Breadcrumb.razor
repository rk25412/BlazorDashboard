<nav>
    <ol class="breadcrumb">
        @foreach (var item in BreadcrumbItems)
        {
            <li class="breadcrumb-item">
                @if (string.IsNullOrEmpty(item.Url))
                {
                    <a href="@item.Url">@item.Title</a>
                }
                else
                {
                    @item.Title
                }
            </li>
        }
    </ol>
</nav>