@using BlazorDashboard.Components.Layout.Sidebar
@using BlazorDashboard.Components.Layout.Header
@inherits LayoutComponentBase

<Header SidebarToggled="@ToggleSidebar"/>

<Sidebar @ref="@_sidebar"/>

<main class="page-content @(_showSidebar ? "" : "hidden-sidebar")">
    @Body
</main>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>